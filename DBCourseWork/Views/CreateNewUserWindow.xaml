<Window x:Class="DBCourseWork.Views.CreateNewUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DBCourseWork.Views"
        mc:Ignorable="d"
        Title="CreateNewUserWindow" Height="250" Width="200">
    <StackPanel>
        <Label Content="Name"></Label>
        <TextBox Name="tb_Name" />

        <Label Content="Password"></Label>
        <TextBox Name="tb_password" />

        <Label Content="Team"></Label>
        <ComboBox Name="cb_team"/>

        <Button Click="bt_Create_Click" Content="Create" Name="bt_Create"/> 
    </StackPanel>
</Window>
